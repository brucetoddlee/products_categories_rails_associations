<h1>Edit Product</h1>

<%= form_for @product do |p| %>

    Name: <br>
    <%= p.text_field :name %> <br>

	 Add categories: <br>
	<% @add_cats_options.each do |c| %>
	        <%= check_box("categories", "add", {:multiple => true}, c, nil) %>
	        <%= label_tag c %> <br>
	<% end %> <br>

	Remove categories: <br>
	<% @remove_cats_options.each do |c| %>
	        <%= check_box("categories", "remove", {:multiple => true}, c, nil) %>
	        <%= label_tag c %> <br>
	<% end %> <br>

    <%= p.submit %>

<% end %>

<%= button_to 'Delete', product_path(@product), :method => 'delete' %>